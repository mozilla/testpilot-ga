{
  "name": "testpilot-ga",
  "version": "0.3.0",
  "description": "A library for event-driven data collection with Google Analytics for Firefox Test Pilot.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Mozilla (https://mozilla.org/)",
  "repository": "https://github.com/mozilla/testpilot-ga",
  "license": "MPL-2.0",
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-plugin-add-module-exports": "1.0.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-modules-umd": "6.24.1",
    "babel-preset-env": "1.7.0",
    "eslint": "5.7.0",
    "husky": "1.1.2",
    "lint-staged": "7.3.0",
    "prettier": "1.14.3"
  },
  "scripts": {
    "build": "mkdir -p dist && babel src/TestPilotGA.js --out-file dist/index.js",
